{
  "name": "postcss-vh-fix",
  "version": "0.0.2",
  "description": "The postcss plugin is used to fix the incorrect display of some browser vh units",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/huxuanming/postcss-vh-fix"
  },
  "scripts": {
    "build": "father build",
    "prettier": "prettier --write '**/*.{js,jsx,tsx,ts,less,md,json}'",
    "test": "jest"
  },
  "keywords": [
    "viewport",
    "postcss",
    "postcss8",
    "postcss-plugin",
    "vh"
  ],
  "author": "huxuanming",
  "license": "ISC",
  "devDependencies": {
    "@eslint/js": "^9.1.1",
    "eslint": "^9.1.1",
    "eslint-config-postcss": "^4.0.0",
    "father": "^4.4.0",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.2",
    "postcss": "^8.4.38",
    "prettier": "^3.2.5",
    "typescript-eslint": "^7.8.0"
  },
  "engines": {
    "node": ">=18.18.0"
  },
  "jest": {
    "testEnvironment": "node"
  },
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.{js,jsx,less,md,json}": [
      "prettier --write"
    ],
    "*": "eslint ."
  }
}
